<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgusername"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/test" />

            <TextView
                android:id="@+id/txtusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mochamad Ahya Satari"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgmenuhome"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_more_horiz_black_24dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgpost"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#3C3710"
            tools:src="@tools:sample/backgrounds/scenic[]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgfavourite"
                android:src="@drawable/ic_favorite_border_black_24dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imgcomment"
                android:layoutDirection="rtl"
                android:src="@drawable/ic_chat_bubble_outline_black_24dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgshare"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_send_black_24dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/imgbookmark"
                android:src="@drawable/ic_bookmark_border_black_24dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="10, 100k views"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtusernamehome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mochamad Ahya Satari"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtcaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Photography adalah hobi saya" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>